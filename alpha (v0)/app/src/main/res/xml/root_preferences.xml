<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="SETTINGS">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="useLockScreen"
            app:title="Lockscreen"
            app:icon="@drawable/ic_fluent_phone_lock_24_filled"/>

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/time_entries"
            app:entryValues="@array/time_values"
            app:key="time"
            app:title="Screen timeout"
            app:useSimpleSummaryProvider="true"
            app:icon="@drawable/ic_fluent_phone_screen_time_24_filled"/>

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="pref_draw_over_other_apps"
            app:icon="@drawable/ic_fluent_color_24_filled"
            app:summary="@string/pref_draw_over_other_apps_summary"
            app:title="@string/pref_draw_over_other_apps">
        </SwitchPreferenceCompat>
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="pref_admin"
            app:icon="@drawable/ic_fluent_shield_keyhole_24_filled"
            app:summary="@string/pref_admin_summary"
            app:title="@string/pref_admin">
        </SwitchPreferenceCompat>
    </PreferenceCategory>

</PreferenceScreen>